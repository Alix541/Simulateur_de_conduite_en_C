{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build BiblioPhoto",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "${workspaceFolder}/mainn.c",
                "-I${workspaceFolder}/include",
                "-L${workspaceFolder}/lib",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",  // Ajoutez SDL2_image ici
                "-lSDL2_ttf",
                "-o",
                "${workspaceFolder}/bibliophoto.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}